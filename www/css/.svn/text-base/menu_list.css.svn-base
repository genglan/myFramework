ion-list {
	min-height: 700px;
	background: #fff;
}
ion-list .items_box {
	display: block;
	width: 100%;
	height: 103px;
	margin-left: 15px;
	padding-top: 15px;
	border-bottom: 1px solid #e6e6e6;
}
ion-list ion-item.item {
	height: 100px;
	border: none;
	padding: 0;
}
ion-list ion-item p {
	margin: 0;
	color: #cbcbcb;
	font-size: 11px;
	width:95%;
}
ion-list ion-item div {
	display: inline-block;
	margin-top: -4px;
}
.ion-add{
	background: url(../img/add.png) no-repeat;
	background-size: 16px;
	margin-top: 8px;
}
.middle-list{
	background: #fff;
}
.checked {
	background: rgba(0,0,0,0.15);
}
.tabs ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
}
.tabs ul li {
    float: left;
	background: #d14014;
	color: #fff;
	border:1px solid #fff;
	border:1px solid #fff;
	height: 30px;
	line-height: 30px;
	margin-top: 7px;
	width: 150px;
}
.tabs ul li:nth-child(1){
	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
}
.tabs ul li:nth-child(2){
	border-bottom-right-radius: 5px;
	border-top-right-radius: 5px;
	border-left: none;
}
.tabs .actived{
	background: #fff;
	color: #d14014;
}
#mainView  .scroll-content{
	margin-top: 44px;
}